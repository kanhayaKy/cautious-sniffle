<h1>Create Post</h1>

<%= form_with model:@post do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
        <% @post.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :body %>
        <%= form.text_field :body %>
        <% @post.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>